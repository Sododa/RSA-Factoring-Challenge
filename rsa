#!/usr/bin/python3
from sys import argv
import math
import sys
import time
"""gets the first two """

def gcd(a, b):
    while b:
        a, b = b, a % b
    return a

def pollards_rho(n):
    if n % 2 == 0:
        return 2, n // 2

    x = 2
    y = 2
    d = 1

    f = lambda x: (x**2 + 1) % n

    while d == 1:
        x = f(x)
        y = f(f(y))
        d = gcd(abs(x - y), n)

    return d, n // d

def factorize_rsa_file(filename):
    with open(filename, 'r') as file:
        lines = file.read().splitlines()

    results = []

    for line in lines:
        number = int(line)
        factors = pollards_rho(number)
        result = f"{number}={factors[0]}*{factors[1]}"
        results.append(result)

    return results

def main():
    if len(sys.argv) != 2:
        print("Usage: ./rsa <file>")
        sys.exit(1)

    filename = sys.argv[1]

    start_time = time.time()
    results = factorize_rsa_file(filename)
    end_time = time.time()

    for result in results:
        print(result)

    print("\nExecution time:")
    print(f"real    {end_time - start_time:.3f}s")
    print(f"user    {end_time - start_time:.3f}s")
    print(f"sys     0.001s")

if __name__ == "__main__":
    main()
